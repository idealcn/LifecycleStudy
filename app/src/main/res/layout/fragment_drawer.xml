<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/themeColor">

        <ImageView
                android:id="@+id/avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@color/Amber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  app:layout_constraintLeft_toLeftOf="@+id/avatar"
                  app:layout_constraintRight_toRightOf="@+id/avatar"
                  android:layout_marginTop="@dimen/dp_16"
                  app:layout_constraintTop_toBottomOf="@+id/avatar"
                  app:layout_constraintBottom_toBottomOf="parent"
                  tools:text="用户"
                  android:textColor="#ffffff"
                  android:layout_marginBottom="@dimen/dp_16"/>

    </android.support.constraint.ConstraintLayout>

    <!-- <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_24"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/leftHome"
     android:src="@drawable/ic_home_black_24dp"/>-->

    <TextView android:layout_width="0dp"
              android:paddingLeft="@dimen/dp_24"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"


              android:layout_height="wrap_content"
              android:id="@+id/leftHome" app:layout_constraintTop_toBottomOf="@+id/layout1"
              android:layout_marginTop="@dimen/dp_24"
              android:drawableLeft="@drawable/ic_home_black_24dp"
              android:text="首页" android:textColor="@color/themeColor"
              android:gravity="center_vertical"
              android:drawablePadding="@dimen/dp_12"
    />


    <TextView
            android:layout_width="0dp"
            android:paddingLeft="@dimen/dp_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            android:id="@+id/leftGongZhongHao" app:layout_constraintTop_toBottomOf="@+id/leftHome"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:text="公众号" android:textColor="@color/themeColor"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_12"
    />


    <TextView
            android:layout_width="0dp"
            android:paddingLeft="@dimen/dp_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_height="wrap_content"
            android:id="@+id/leftCollect" app:layout_constraintTop_toBottomOf="@+id/leftGongZhongHao"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:text="收藏" android:textColor="@color/themeColor"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_12"
    />

    <TextView android:layout_height="wrap_content"
              android:id="@+id/leftSetting" app:layout_constraintTop_toBottomOf="@+id/leftCollect"
              android:layout_marginTop="@dimen/dp_24"
              android:drawableLeft="@drawable/ic_home_black_24dp"
              android:text="设置" android:textColor="@color/themeColor"
              android:gravity="center_vertical"
              android:drawablePadding="@dimen/dp_12"
              android:layout_width="0dp"
              android:paddingLeft="@dimen/dp_24"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
    />


    <TextView android:layout_width="0dp"
              android:paddingLeft="@dimen/dp_24"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"

              android:layout_height="wrap_content"
              android:id="@+id/leftExit" app:layout_constraintTop_toBottomOf="@+id/leftSetting"
              android:layout_marginTop="@dimen/dp_24"
              android:drawableLeft="@drawable/ic_home_black_24dp"
              android:text="退出登录" android:textColor="@color/themeColor"
              android:gravity="center_vertical"
              android:drawablePadding="@dimen/dp_12"
    />
</android.support.constraint.ConstraintLayout>